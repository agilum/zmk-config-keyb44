/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/led/led.h>

/ {
    chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;

        zmk,kscan = &kscan0;

        zmk,matrix-transform = &default_transform;
       
        zmk,backlight = &backlight;
        zmk,battery = &max17048;

        zmk,caps-lock-led = &caps_lock_led;/*added by grok*/

        /*zmk,led-capslock = &caps_lock_led;*//*remove aliases!*/
        /* zephyr,console = &cdc_acm_uart; */
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
		diode-direction = "col2row";
		wakeup-source;
        debounce-press-ms = <1>;
		debounce-release-ms = <5>;

        row-gpios
            = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        col-gpios
 			= <&gpio0 31 GPIO_ACTIVE_HIGH>
        	, <&gpio0 30 GPIO_ACTIVE_HIGH>
        	, <&gpio0 29 GPIO_ACTIVE_HIGH>
        	, <&gpio0 28 GPIO_ACTIVE_HIGH>
        	, <&gpio0  2 GPIO_ACTIVE_HIGH>
        	, <&gpio0  3 GPIO_ACTIVE_HIGH>
        	, <&gpio0 10 GPIO_ACTIVE_HIGH>
        	, <&gpio0  9 GPIO_ACTIVE_HIGH>
        	, <&gpio1  6 GPIO_ACTIVE_HIGH>
        	, <&gpio1  4 GPIO_ACTIVE_HIGH>
        	, <&gpio1  2 GPIO_ACTIVE_HIGH>
        	, <&gpio1  1 GPIO_ACTIVE_HIGH>;
    };

    default_transform: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        map = <
			RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
                            RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
        >;
    };

	

    backlight: pwmleds {
        compatible = "pwm-leds";
        status = "okay";
        pwm_led_0 {
            pwms = <&pwm0 0 PWM_MSEC(10) PWM_POLARITY_INVERTED>; // Add for P-MOSFET active-low control
            status = "okay";
        }; 
    };

             // Independent Caps Lock PWM LED 
    caps_leds: caps_pwm_leds {
        compatible = "pwm-leds";
        status = "okay";  
        caps_lock_led: caps_lock_led {      
            label = "Caps Lock LED";
            pwms = <&pwm0 1 PWM_MSEC(10) PWM_POLARITY_NORMAL>;
            status = "okay";
        };
    };

    aliases {
        caps-lock-indicator-led = &caps_lock_led;   
    };

            // Independent  Layers PWM LEDs 
    layer_leds: layer_leds {
        compatible = "pwm-leds";
        status = "okay";

        lower_led: lower_led {
            label = "LOWER LED";
            pwms = <&pwm0 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;  // Try INVERTED if LEDs don't light; adjust period if needed
            status = "okay";
        };

        raise_led: raise_led {
            label = "RAISE LED";
            pwms = <&pwm0 3 PWM_MSEC(20) PWM_POLARITY_NORMAL>;  // Try INVERTED if LEDs don't light; adjust period if needed
            status = "okay";
        };
    };
    

	leds {
        compatible = "gpio-leds";

        /* not used for now but this usual blueled control
        blue_led: led_0 {
            gpios = <&gpio1 3 GPIO_ACTIVE_HIGH>; // another blueled implementation
        };
        */

        user_led: led_0 {
            gpios = <&gpio1 3 GPIO_ACTIVE_HIGH>;  // 	P1.03 blue led 
			label = "User LED";
       };
    };

	aliases {
        indicator-led = &user_led;
    };	
};


&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

zephyr_udc0: &usbd {
    status = "okay";
};



&pinctrl {

	i2c0_default: i2c0_default {
       group1 {
           psels = <NRF_PSEL(TWIM_SDA, 0, 7)>,
                   <NRF_PSEL(TWIM_SCL, 1, 9)>;
   		};
     };
    i2c0_sleep: i2c0_sleep {
       group1 {
           psels = <NRF_PSEL(TWIM_SDA, 0, 7)>,
                   <NRF_PSEL(TWIM_SCL, 1, 9)>;
           low-power-enable;
       	};
     };	

    pwm0_default: pwm0_default {
        group1 {
            psels = <NRF_PSEL(PWM_OUT0, 0, 4)>; // P0.4 for backlight PWM //				
        };
        group2 { 
            psels = <NRF_PSEL(PWM_OUT1, 1, 0)>; // P1.0 for capslock PWM
        };
        group3 { 
            psels = <NRF_PSEL(PWM_OUT2, 0, 22)>,  
                    <NRF_PSEL(PWM_OUT3, 0, 5)>;  // P0.22  Lower LED (channel 2) P0.05  Raise LED (channel 3)
        };
     };

    pwm0_sleep: pwm0_sleep {
        group1 {
            psels = <NRF_PSEL(PWM_OUT0, 0, 4)>; // <NRF_PSEL(PWM_OUT0, 1, 0)>;
            low-power-enable;
        };
		group2 { 
            psels = <NRF_PSEL(PWM_OUT1, 1, 0)>; // P1.0 for capslock PWM
            low-power-enable;
        };
        group3 { 
             psels = <NRF_PSEL(PWM_OUT2, 0, 22)>,  
                     <NRF_PSEL(PWM_OUT3, 0, 5)>;  // P0.22  Lower LED (channel 2) P0.05  Raise LED (channel 3)
             low-power-enable;
        };			            
     };

};

 

&pwm0 {
    status = "okay";
    pinctrl-0 = <&pwm0_default>;
    pinctrl-1 = <&pwm0_sleep>;
    pinctrl-names = "default", "sleep";
};




&i2c0 {
    compatible = "nordic,nrf-twi";
    status = "okay";
 	pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
	clock-frequency = <100000>;

    max17048: max17048@36 {
        compatible = "zmk,maxim-max17048";
        label = "MAX17048";
        reg = <0x36>;
        status = "okay";
    };
};





&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		sd_partition: partition@0 {
			label = "softdevice";
			reg = <0x00000000 0x00026000>;
		};
		code_partition: partition@26000 {
			label = "code_partition";
			reg = <0x00026000 0x000c6000>;
		};

		/*
		 * The flash starting at 0x000ec000 and ending at
		 * 0x000f3fff is reserved for use by the application.
		 */

		/*
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@ec000 {
			label = "storage";
			reg = <0x000ec000 0x00008000>;
		};


		boot_partition: partition@f4000 {
			label = "adafruit_boot";
			reg = <0x000f4000 0x0000c000>;
		};
	};
};
